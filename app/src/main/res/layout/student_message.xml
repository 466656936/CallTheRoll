<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#000000"
    android:orientation="vertical"
    android:weightSum="2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#000000"
        android:orientation="horizontal"
        android:weightSum="19">

        <TextView
            android:id="@+id/stu_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:gravity="center_horizontal"
            android:textColor="#F3F3F3"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/stu_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_weight="4"
            android:gravity="center_horizontal"
            android:textColor="#F3F3F3"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/stu_class"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_weight="5"
            android:gravity="center_horizontal"
            android:textColor="#F3F3F3"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/stu_job"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_weight="4"
            android:gravity="center_horizontal"
            android:textColor="#F3F3F3"
            android:textSize="16sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="26.2">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_weight="4"
            android:gravity="right"
            android:text="已上课:"
            android:textColor="#F3F3F3"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/sum_class"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_weight="1.2"
            android:gravity="left"
            android:textColor="#F3F3F3"
            android:textSize="14sp" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_weight="3"
            android:gravity="right"
            android:text="全勤:"
            android:textColor="#F3F3F3"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/quanqing"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_weight="1.2"
            android:gravity="left"
            android:textColor="#F3F3F3"
            android:textSize="14sp" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_weight="3"
            android:gravity="right"
            android:text="请假:"
            android:textColor="#F3F3F3"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/qingjia"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_weight="1.2"
            android:gravity="left"
            android:textColor="#F3F3F3"
            android:textSize="14sp" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_weight="3"
            android:gravity="right"
            android:text="迟到:"
            android:textColor="#F3F3F3"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/chidao"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_weight="1.2"
            android:gravity="left"
            android:textColor="#F3F3F3"
            android:textSize="14sp" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_weight="3"
            android:gravity="right"
            android:text="早退:"
            android:textColor="#F3F3F3"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/zaotui"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_weight="1.2"
            android:gravity="left"
            android:textColor="#F3F3F3"
            android:textSize="14sp" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_weight="3"
            android:gravity="right"
            android:text="旷课:"
            android:textColor="#F3F3F3"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/kuangke"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_weight="1.2"
            android:gravity="left"
            android:textColor="#F3F3F3"
            android:textSize="14sp" />

    </LinearLayout>
</LinearLayout>
